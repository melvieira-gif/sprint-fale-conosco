    <!--Parte fale conosco-->
    <div class="div_contato ocultar" id="div_contato">
        <h1>Fale conosco</h1>
        <!--preenchimento fale conosco-->
        <div id="div_formulario" class="div_formulario">
            <!--Parte nome-->
            <label for="input_nome">Nome:</label>
            <input id="input_nome" class="input_formulario" type="text" placeholder="Digite seu nome completo">
            <br><br>
            <!--Parte email-->
            <label for="input_email">Email:</label>
            <input id="input_email" class="input_formulario" type="email" placeholder="Insira seu email">
            <br><br>
            <!--Parte assunto-->
            <label for="input_instituicao">Assunto:</label>
            <input id="input_instituicao" class="input_formulario" type="text">
            <br><br>
            <!--Parte mensagem-->
            <label for="input_msg">Mensagem:</label>
            <input id="input_msg" class="input_formulario" type="text">
            <br><br>
        </div>
    </div>

    <!-- ===== Login ===== -->
    <div class="div_login ocultar" id="div_login">
        <div id="login_fields">
            <h1>Login</h1>
            <label for="input_CPF">CPF</label>
            <input id="input_CPF" type="text" placeholder="Digite seu CPF">
            <br><br>

            <label for="input_senha">Senha</label>
            <input id="input_senha" type="password" placeholder="Digite sua senha">
            <br><br>

            <button id="btn_cadastrar" class="btn2">Cadastrar</button>
            <button id="btn_entrar" class="btn2">Entrar</button>
        </div>
            
        <div class="div_cadastrar ocultar" id="div_cadastrar">
            <h1>Cadastrar</h1>
            <br>
            <label for="input_nome">Nome completo</label>
            <input id="input_nome" type="text">
            <br><br>

            <label for="input_CPF_cadastro">CPF</label>
            <input id="input_CPF_cadastro" type="text">
            <br><br>

