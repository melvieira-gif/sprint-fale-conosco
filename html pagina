<script>
    // para os botões sumirem/desaparecer login e fale conosco
    document.getElementById("btn_login").addEventListener("click", () => {
        document.getElementById("div_login").classList.toggle("ocultar");
        document.getElementById("div_contato").classList.add("ocultar");
    }); 

    document.getElementById("btn_contato").addEventListener("click", () => {
        document.getElementById("div_login").classList.add("ocultar");
        document.getElementById("div_contato").classList.toggle("ocultar");
    }); 
    const loginFields = document.getElementById("login_fields");
    const divCadastro = document.getElementById("div_cadastrar");

    document.getElementById("btn_cadastrar").addEventListener("click", () => {
        divCadastro.classList.remove("ocultar");
        loginFields.style.display = "none";
    });

    document.getElementById("btn_salvar_cadastro").addEventListener("click", () => {
        alert("Cadastro salvo! Faça o login agora.");
        divCadastro.classList.add("ocultar");
        loginFields.style.display = "block";
    });
    
    // validar se os usuario esta correto para fazer login
    document.getElementById("btn_entrar").addEventListener("click", () => {
        const cpfInput = document.getElementById("input_CPF").value;
        const senhaInput = document.getElementById("input_senha").value;
        const cpfCadastrado = document.getElementById("input_CPF_cadastro").value;
        const senhaCadastrada = document.getElementById("input_senha_cadastro").value;

        if (cpfInput === cpfCadastrado && senhaInput === senhaCadastrada && cpfInput !== "" && senhaInput !== "") {
            alert("Conectado!");
            document.getElementById("btn_trabalhe").style.display = "inline-block";
            document.getElementById("div_login").classList.add("ocultar");
        } else {
            alert("CPF ou senha incorretos!");
        }
    });

    // back+banco de dados
    
</script>
</html>
